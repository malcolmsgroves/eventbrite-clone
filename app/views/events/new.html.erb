<% provide(:title, 'New Event') %>
<h1>New Event</h1>
<div>
  <%= form_for @event do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.date_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :date %>
    <%= f.date_field :date %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.submit 'Create Event' %>
  <% end %>
</div>
